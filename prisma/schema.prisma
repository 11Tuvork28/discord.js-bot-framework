// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId        BigInt     @id @unique
  name          String
  refresh_token String     @default("")
  stats         Stats      @relation(fields: [userId], references: [userId])
  Messages      Messages[]
}

model Stats {
  userId               BigInt   @id @unique
  user                 User?
  last_message_sent    DateTime @default(now())
  last_online          DateTime @default(now())
  message_points       Float    @default(10.0)
  message_count_bucket Int      @default(0)
}

model Messages {
  id      BigInt    @id @default(autoincrement())
  user_id BigInt    @unique
  user    User?     @relation(fields: [user_id], references: [userId])
  message Message[]
}

model Message {
  messageId BigInt   @id
  createdAt DateTime
  authorID  BigInt
  Messages  Messages @relation(fields: [messageId], references: [id])
}
