// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId        BigInt @id @unique
  name          String
  refresh_token String @default("")
  stats         Stats  @relation(fields: [userId], references: [userId])
}

model Stats {
  userId               BigInt    @id @unique
  user                 User?
  messages             Message[]
  last_message_sent    DateTime? @default(now())
  last_online          DateTime  @default(now())
  message_points       Float     @default(10.0)
  message_count_bucket Int       @default(0)
}

model Message {
  messageId   BigInt   @id @unique
  userId      BigInt
  stats       Stats?   @relation(fields: [userId], references: [userId])
  createdAt   DateTime
  statsUserId BigInt?
}
