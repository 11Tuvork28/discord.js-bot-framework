// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rank {
  NEW
  MEMBER
  MOD
  ADMIN
  OWNER
}

model User {
  userId      BigInt  @id @unique
  guildId     BigInt
  name        String
  stats       Stats   @relation(fields: [userId], references: [userId])
  unlocked    Boolean @default(false)
  deactivated Boolean @default(false)
  rank        Rank    @default(NEW)
}

model Stats {
  userId             BigInt    @id @unique
  guildId            BigInt
  user               User?
  messages           Message[]
  lastMessageSent    DateTime? @default(now())
  lastOnline         DateTime  @default(now())
  messageCountBucket Int       @default(30)
  firstMessageId     BigInt    @default(0)
}

model Message {
  messageId   BigInt   @id @unique
  userId      BigInt
  channelId   BigInt
  guildId     BigInt
  stats       Stats    @relation(fields: [userId], references: [userId])
  createdAt   DateTime
  statsUserId BigInt?
}

model RistrictedChannels {
  channelId      BigInt @id @unique
  guildId        BigInt
  requiredPoints BigInt
}

model Settings {
  guildId                BigInt @id @unique
  prefix                 String @default("!")
  welcomeMessageFormat   String @default("Welcome {user}!")
  openIntroChannelId     BigInt @default(0)
  introChannelId         BigInt @default(0)
  leaveMessageFormat     String @default("Goodbye {user}!")
  leaveChannelId         BigInt @default(0)
  unverifiedMemberRoleId BigInt @default(0)
  verifiedMemberRoleId   BigInt @default(0)
  modRoleId              BigInt @default(0)
  adminRoleId            BigInt @default(0)
}

