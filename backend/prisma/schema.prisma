// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rank {
  NEW
  MEMBER
  MOD
  ADMIN
  OWNER
}

model User {
  userId      String     @id @unique
  guildId     String
  name        String
  stats       Stats      @relation(fields: [userId], references: [userId])
  unlocked    Boolean    @default(false)
  deactivated Boolean    @default(false)
  rank        Rank       @default(NEW)
}

model Stats {
  userId             String    @id @unique
  guildId            String
  user               User?
  messages           Message[]
  lastMessageSent    DateTime? @default(now())
  lastOnline         DateTime  @default(now())
  messageCountBucket Int       @default(30)
  firstMessageId     String    @default("")
}

model Message {
  messageId   String   @id @unique
  userId      String
  channelId   String
  guildId     String
  stats       Stats    @relation(fields: [userId], references: [userId])
  createdAt   DateTime
  statsUserId String?
}

model RistrictedChannels {
  channelId      String @id @unique
  guildId        String
  requiredPoints Int    @default(0)
}

model Settings {
  guildId                String @id @unique
  prefix                 String @default("!")
  welcomeMessageFormat   String @default("Welcome {user}!")
  openIntroChannelId     String @default("")
  introChannelId         String @default("")
  leaveMessageFormat     String @default("Goodbye {user}!")
  leaveChannelId         String @default("")
  unverifiedMemberRoleId String @default("")
  verifiedMemberRoleId   String @default("")
  modRoleId              String @default("")
  adminRoleId            String @default("")
}

model AuditLog {
  id             Int      @id @default(autoincrement())
  guildId        String
  invokerId      String
  action         String
  reason         String
  createdAt      DateTime @default(now())
  targetId       String
  targetType     String
  extraInfo      Json?
}
